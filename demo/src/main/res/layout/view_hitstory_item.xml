<RelativeLayout
        android:id="@+id/list_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ripple_grey"
        android:minHeight="@dimen/Material_Component_Two_Line_Avatar_List_Height">

    <ImageView
            android:id="@+id/view_list_avatar"
            android:layout_width="@dimen/Material_Layout_Icon_Width"
            android:layout_height="@dimen/Material_Layout_Icon_Height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/Material_Component_Single_Line_Avatar_List_Avatar_Padding_Left"
            android:padding="@dimen/Material_Layout_Icon_Padding"
            android:src="@drawable/ic_launcher"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="vertical">

        <TextView
                android:id="@+id/view_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/Material_Component_Single_Line_Avatar_List_Text_Padding_Left"
                android:layout_marginTop="@dimen/Material_Component_Single_Line_Avatar_List_Text_Padding_Top"
                android:text="main"/>

        <TextView
                android:id="@+id/view_list_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/Material_Component_Single_Line_Avatar_List_Text_Padding_Bottom"
                android:layout_marginLeft="@dimen/Material_Component_Single_Line_Avatar_List_Text_Padding_Left"
                android:text="summary"/>
    </LinearLayout>
</RelativeLayout>